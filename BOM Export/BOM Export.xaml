<Window x:Class="BOM_Export"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BOM_Export"
        mc:Ignorable="d"
        Title="BOM_Export" Height="275" MinHeight="275" MinWidth="275"  Width="275" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="245*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Stretch" Margin="5,0" TextWrapping="Wrap"  VerticalAlignment="Stretch" FontSize="48" Foreground="Tan" ><Run Text="bom" FontFamily=" Segoe UI Semibold"/><Run Text="export" FontFamily=" Segoe UI Light"/>
        </TextBlock>
        <Rectangle Fill="Tan" HorizontalAlignment="Stretch" Height="1" Margin="5,0,0,0" Grid.Row="1" Stroke="Tan" VerticalAlignment="Center" />

        <StackPanel HorizontalAlignment="Center" Height="120"  Grid.Row="2" VerticalAlignment="Center" Width="120" >
            <Label Content="2D" Foreground="White" FontSize="24" FontFamily="Segoe UI Light" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Height="40" MouseDown="Label_MouseDown"/>
            <Label Content="3D" Foreground="White" FontSize="24" FontFamily="Segoe UI Light" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Height="40"/>
            <Label Content="excel" Foreground="White" FontSize="24" FontFamily="Segoe UI Light" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Height="40"/>
        </StackPanel>

        <TextBlock x:Name="Tblk_FormatSelector"  HorizontalAlignment="Center" VerticalAlignment="Center"  Height="120" Width="120"
                   TextAlignment="Center" TextWrapping="WrapWithOverflow"
                   Grid.Row="2"  Text="select format to export"   
                   FontSize="24" Foreground="White" FontFamily="Segoe UI Light" Padding="5" Background="Black"  >
            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                           
                            <DoubleAnimation
                       
                        Storyboard.TargetProperty="Height"
                        From="120" To="0" Duration="0:0:01"
                        AccelerationRatio="0.70" DecelerationRatio="0.1" 
                        AutoReverse="False" />
                            
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>                             
            </TextBlock.Triggers>


        </TextBlock>


    </Grid>
</Window>
